{
  "manifest_version": 3,
  "name": "YouTube Thumbnail Hider",
  "version": "1.0",
  "description": "Hides YouTube video thumbnails.",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}